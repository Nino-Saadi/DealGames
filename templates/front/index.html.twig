    {% for product in products %}
     <div class=" card col-lg-3 md-8">
        <div class="ratio ratio-4x3"><img class="card-img-top imgCorrect" src="{{ vich_uploader_asset(product) }}" alt="Card image cap"></div>
        <div class="card-body">
          <h5 class="card-title">{{product}}</h5>
          <p class="card-text">{{ product.descProduct }}</p>
          <a href="{{ path('app_product_show', {id:product.id})}}" class="btn btn-primary">Voir le produit</a>
        </div>
      </div>
    {% endfor %}
    </div>
</div>


