{% extends "base.html.twig" %}

{% block title %}Mon compte{% endblock %}

{% block body %}

<div class="row">
    <div class="col">
    <table class="table">
        <thead>
            <tr>
                <th scope="col"><h1 class="text-center">{{ user.name }}</h1></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">Prénom</th>
                <td><h1 class="text-center">{{ user.name }}</h1></td>
            </tr>
            <tr>
                <th scope="row">Nom</th>
                <td><h1 class="text-center">{{ user.lastname }}</h1></td>
            </tr>
            <tr>
                <th scope="row">Email</th>
                <td><h1 class="text-center">{{ user.mailUser }}</h1></td>
            </tr>
            <tr>
                <th scope="row">Date de Création</th>
                <td><h1 class="text-center">{{ user.createdAt ? user.createdAt|date('d-m-Y') : '' }}</h1></td>
            </tr>
  </tbody>
</table>
    </div>
</div>


{% endblock %}

