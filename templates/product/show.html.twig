{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name_product</th>
                <td>{{ product.nameProduct }}</td>
            </tr>
            <tr>
                <th>Price_product</th>
                <td>{{ product.priceProduct }}</td>
            </tr>
            <tr>
                <th>Desc_product</th>
                <td>{{ product.descProduct }}</td>
            </tr>
            <tr>
                <th>Date_product</th>
                <td>{{ product.dateProduct ? product.dateProduct|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Img_product</th>
                <td>{{ product.imgProduct }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
