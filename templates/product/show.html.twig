{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom du Produit</th>
                <td>{{ product}}</td>
            </tr>
            <tr>
                <th>Prix de d√©part</th>
                <td>{{ product.priceProduct }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.descProduct }}</td>
            </tr>
            <tr>
                <th>Date de Publication</th>
                <td>{{ product.dateProduct ? product.dateProduct|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.imgProduct }}</td>
            </tr>
            <tr>
                <th>Annonceurs</th>
                <td>{{ product.user.name }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ product.category.nameCategory }}</td>
            </tr>
        </tbody>

    {% if app.user == product.user %}
    <a href="{{ path('app_product_index') }}">Voir mes produits</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>

    {{ include('product/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
